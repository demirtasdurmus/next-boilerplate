{
  "name": "next-boilerplate",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint:check": "next lint",
    "lint:fix": "next lint --fix",
    "format:write": "prettier --write . --cache",
    "format:check": "prettier --check . --cache",
    "type-check": "tsc -p tsconfig.json --noEmit",
