    "drizzle:migrate": "ts-node --transpile-only ./src/app/api/_db/scripts/migrate.ts",
    "prepare": "husky install",
    "commit": "commit",
    "commitlint": "commitlint --edit"
  },
  "dependencies": {
    "autoprefixer": "10.4.15",
    "axios": "^1.5.1",
    "bcrypt": "^5.1.1",
    "chalk": "^4.1.2",
    "clsx": "^2.0.0",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.28.6",
    "jose": "^4.14.6",
    "next": "^13.5.3",
    "next-connect": "^1.0.0",
    "pg": "^8.11.3",
    "postcss": "^8.4.31",
    "postgres": "^3.3.5",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-spinners": "^0.13.8",
    "react-toastify": "^9.1.3",
    "tailwindcss": "3.3.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
